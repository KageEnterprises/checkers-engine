{
  "name": "checkers-engine",
  "version": "0.0.1",
  "description": "A cool game engine to run Checkers-type games! You just need to build your own front end for it!",
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "buildwatch": "tsc -w",
    "prepare": "npm run build",
    "standard": "standard \"**/*.ts\" \"**/*.tsx\" --fix",
    "test": "npm run standard && jest",
    "testwatch": "npm run standard && jest --watchAll"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "checkers"
  ],
  "author": "kage23",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^23.3.10",
    "babel-eslint": "^10.0.1",
    "husky": "^1.2.0",
    "jest": "^23.6.0",
    "standard": "^12.0.1",
    "ts-jest": "^23.10.5",
    "typescript": "^3.2.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testRegex": "^.+\\.test\\.ts$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "pre-push": "npm test"
    }
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
